<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/menuBackground">

    <LinearLayout
        android:id="@+id/LL_screen"
        android:gravity="center"
        android:layout_width="@dimen/ScreenFragment_LL_Screen_width"
        android:layout_height="@dimen/ScreenFragment_LL_Screen_height"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true">
        <ImageView
            android:src="@drawable/left"
            android:layout_width="@dimen/ScreenFragment_iv_left_width"
            android:layout_height="@dimen/ScreenFragment_iv_left_height"
            android:id="@+id/screen_left"/>
        <TextView
            android:id="@+id/screen_text"
            android:gravity="center"
            android:text="自动"
            android:textColor="@color/white"
            android:textSize="@dimen/ScreenFragment_tv_screen_textSize"
            android:layout_width="@dimen/ScreenFragment_tv_width"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/screen_right"
            android:src="@drawable/right"
            android:layout_width="@dimen/ScreenFragment_iv_right_width"
            android:layout_height="@dimen/ScreenFragment_iv_right_height"/>
    </LinearLayout>


</LinearLayout>